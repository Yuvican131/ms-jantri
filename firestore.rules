rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     */
    function isExistingOwner(userId) {
        return isSignedIn() && request.auth.uid == userId && resource != null;
    }

    /**
     * @description Enforces that an incoming field must match the user ID.
     */
    function isValidCreateRequest(userId) {
      return request.resource.data.userId == userId;
    }

    match /users/{userId}/clients/{clientId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && isValidCreateRequest(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    match /users/{userId}/sheetLogs/{sheetLogId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && isValidCreateRequest(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    match /users/{userId}/declaredNumbers/{drawId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && isValidCreateRequest(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
  }
}