rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by a signed-in user.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId - The user ID to compare against the authenticated user's ID.
     * @return {bool} - True if the user IDs match, false otherwise.
     * @example isOwner("some_user_id") -> true if request.auth.uid == "some_user_id"
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner of the existing document.
     * @param {string} userId - The user ID to compare against the authenticated user's ID.
     * @return {bool} - True if the user IDs match and the resource exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(resource);
    }

    /**
     * @description Enforces document ownership for Clients under /users/{userId}.
     * @path /users/{userId}/clients/{clientId}
     * @allow (create) - User 'user123' creates a new client document under /users/user123/clients/client456
     * @allow (get, list) - User 'user123' reads a client document under /users/user123/clients/client456
     * @allow (update, delete) - User 'user123' updates/deletes a client document under /users/user123/clients/client456
     * @deny (create, update, delete) - User 'user456' attempts to create/update/delete a client document under /users/user123/clients/client456
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/clients/{clientId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Enforces document ownership for Accounts under /users/{userId}.
     * @path /users/{userId}/accounts/{accountId}
     * @allow (create) - User 'user123' creates a new account document under /users/user123/accounts/account456
     * @allow (get, list) - User 'user123' reads an account document under /users/user123/accounts/account456
     * @allow (update, delete) - User 'user123' updates/deletes an account document under /users/user123/accounts/account456
     * @deny (create, update, delete) - User 'user456' attempts to create/update/delete an account document under /users/user123/accounts/account456
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/accounts/{accountId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Enforces document ownership for Sheets under /users/{userId}.
     * @path /users/{userId}/sheets/{sheetId}
     * @allow (create) - User 'user123' creates a new sheet document under /users/user123/sheets/sheet456
     * @allow (get, list) - User 'user123' reads a sheet document under /users/user123/sheets/sheet456
     * @allow (update, delete) - User 'user123' updates/deletes a sheet document under /users/user123/sheets/sheet456
     * @deny (create, update, delete) - User 'user456' attempts to create/update/delete a sheet document under /users/user123/sheets/sheet456
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/sheets/{sheetId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
  }
}