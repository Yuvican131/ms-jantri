
{
  "entities": {
    "Sheet": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Sheet",
      "type": "object",
      "description": "Represents a grid sheet with editable cells.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Sheet entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the sheet."
        },
        "gridData": {
          "type": "array",
          "description": "Represents the data within the 10x10 grid.",
          "items": {
            "type": "string"
          }
        },
        "clientId": {
          "type": "string",
          "description": "Reference to the Client that owns this sheet. (Relationship: Client 1:N Sheet)"
        }
      },
      "required": [
        "id",
        "name",
        "gridData",
        "clientId"
      ]
    },
    "Client": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Client",
      "type": "object",
      "description": "Represents a client.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Client entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the client."
        },
        "pair": { "type": "string" },
        "comm": { "type": "string" },
        "inOut": { "type": "string" },
        "patti": { "type": "string" },
        "activeBalance": { "type": "number" }
      },
      "required": [
        "id",
        "name",
        "pair",
        "comm",
        "inOut",
        "patti",
        "activeBalance"
      ]
    },
    "Account": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Account",
      "type": "object",
      "description": "Represents an account for auditing purposes.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Account entity."
        },
        "clientName": { "type": "string" },
        "balance": { "type": "number" },
        "draws": { "type": "object" }
      },
      "required": [
        "id",
        "clientName",
        "balance"
      ]
    },
    "SheetLog": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SheetLog",
      "type": "object",
      "description": "Represents a log of a saved sheet.",
      "properties": {
        "id": { "type": "string" },
        "clientName": { "type": "string" },
        "clientId": { "type": "string" },
        "gameTotal": { "type": "number" },
        "data": { "type": "object" },
        "date": { "type": "string", "format": "date-time" },
        "draw": { "type": "string" }
      },
      "required": ["id", "clientName", "clientId", "gameTotal", "data", "date", "draw"]
    },
    "DeclaredNumber": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DeclaredNumber",
      "type": "object",
      "description": "Represents a declared number for a draw.",
      "properties": {
        "id": { "type": "string" },
        "number": { "type": "string" }
      },
      "required": ["id", "number"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/clients/{clientId}",
        "definition": {
          "entityName": "Client",
          "schema": {
            "$ref": "#/backend/entities/Client"
          },
          "description": "Stores client data."
        }
      },
      {
        "path": "/sheetLogs/{logId}",
        "definition": {
          "entityName": "SheetLog",
          "schema": {
            "$ref": "#/backend/entities/SheetLog"
          },
          "description": "Stores logs of saved sheets."
        }
      },
      {
        "path": "/declaredNumbers/{drawName}",
        "definition": {
          "entityName": "DeclaredNumber",
          "schema": {
            "$ref": "#/backend/entities/DeclaredNumber"
          },
          "description": "Stores declared numbers for draws."
        }
      },
      {
        "path": "/accounts/{accountId}",
        "definition": {
          "entityName": "Account",
          "schema": {
            "$ref": "#/backend/entities/Account"
          },
          "description": "Stores account data for auditing purposes."
        }
      }
    ]
  }
}
